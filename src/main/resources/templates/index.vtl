<h1>Welcome to your Shoe Empire!</h1>

<form class="form-horizontal" action="/add-brand" method="post">
  <div class="form-group">
    <h3>Add a shoe brand:</h3>
    <input type="text" class="form-control" name="newBrand" id="newBrand" placeholder="Nike?">
    <button type="submit" class="btn btn-default" name="button">Add Brand</button>
  </div>
</form>

  <h3>Current Brands Stocked:</h3>
  #foreach ($brand in $brands)
